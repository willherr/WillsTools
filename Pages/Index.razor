@page "/"
@layout PageLayout

<Title>Cassandra's Cookbook</Title>

<div class="text-center">
    Be adventurous. Try a recipe.
</div>

@code {
    [CascadingParameter(Name = "PageLayout")] PageLayout Layout { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        if (Layout == null) return;
        Layout.Reset();
    }
}
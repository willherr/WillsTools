@inject NavigationManager NavigationManager

    <MatNavMenu>
        <MatNavItem Href="test-code">
            Test Code <MatIcon Class="ml-auto"><i class="fas fa-vial" aria-hidden="true"></i></MatIcon>
        </MatNavItem>
        <MatDivider></MatDivider>
        <MatNavItem Href="counter">
            Counter <MatIcon Class="ml-auto mr-1"><i class="fas fa-minus" aria-hidden="true"></i></MatIcon><MatIcon><i class="fas fa-plus"></i></MatIcon>
        </MatNavItem>
        <MatDivider></MatDivider>
        <MatNavItem Href="random">
            Random <MatIcon Class="ml-auto"><i class="@randomDieNumber" aria-hidden="true"></i></MatIcon>
        </MatNavItem>
        <MatDivider></MatDivider>
        <MatNavItem Href="bottoms-up">
            Bottom's Up <MatIcon Class="ml-auto"><i class="fas fa-long-arrow-alt-up"></i></MatIcon>
        </MatNavItem>
    </MatNavMenu>

@code {
    private string randomDieNumber
    {
        get
        {
            switch (new Random().Next(6) + 1)
            {
                case 1: return "fas fa-dice-one";
                case 2: return "fas fa-dice-two";
                case 3: return "fas fa-dice-three";
                case 4: return "fas fa-dice-four";
                case 5: return "fas fa-dice-five";
                default: return "fas fa-dice-six";
            }
        }
    }
}
